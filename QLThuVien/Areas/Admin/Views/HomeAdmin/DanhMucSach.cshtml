@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using QLThuVien.Models
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Sach>

@{
    ViewData["Title"] = "DanhMucSach";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h1>Danh Mục Sách</h1>
<hr/>
<p>
    <a asp-action="Create"><i class="bi bi-plus-circle"></i> Thêm mới sách</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên Sách
            </th>
            <th>
                Tác Giả
            </th>
            <th>
                Số Lượng
            </th>
            <th>
                Tình Trạng Sách
            </th>
            <th>
                Thể Loại
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            string clas = "table-sucess";
        }
        @foreach (var item in Model)
        {
            clas = "table-success";
            i++;
            if (i % 2 == 0)
            {
                clas = "table-warning";
            }
            <tr class="@clas">
                <td>
                    @Html.DisplayFor(modelItem => item.TenSach)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TacGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TinhTrangSach)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaTheLoaiNavigation.TenTheLoai)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaSach"><i class="bi bi-pencil-square"></i>Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaSach"><i class="bi bi-trash3"></i>Xóa</a> |
                    <a asp-action="Details" asp-route-id="@item.MaSach"><i class="bi bi-ticket-detailed"></i>Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    @Html.PagedListPager(Model,page => Url.Action("DanhMucSach", new {page=page}),new X.PagedList.Web.Common.PagedListRenderOptions(){
    LiElementClasses = new List<String> {"page-item"},
    PageClasses = new List<String> {"mt-4 page-link d-flex justify-content-center"}})
</div>