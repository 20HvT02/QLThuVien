@model IEnumerable<QLThuVien.Models.NhanVien>

@{
    ViewData["Title"] = "DanhSachNhanVien";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>DanhSachNhanVien</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr class="table-primary">
            <th>
                User Name
            </th>
            <th>
                Họ Tên
            </th>
            <th>
                Giới Tính
            </th>
            <th>
                Quê Quán
            </th>
            <th>
                Số Điện Thoại
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            string clas = "table-sucess";
        }
        @foreach (var item in Model)
        {
            clas = "table-success";
            i++;
            if (i % 2 == 0)
            {
                clas = "table-warning";
            }
            <tr class="@clas"> 
                <td>
                    @Html.DisplayFor(modelItem => item.UsernameNavigation.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenNhanVien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GioiTinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Que)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sdt)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaNhanVien">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MaNhanVien">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaNhanVien">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
