    <style>
        .dropbtn {
            color: white;
            padding: 16px;
            font-size: 16px;
            border: none;
            cursor: pointer;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

            .dropdown a:hover {
                border-radius: 10px;
                background-color: #E3AB9A;
            }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: none;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
            border-radius: 10px;
        }

            .dropdown-content a {
                color: black;
                margin: 2px;
                padding: 10px 10px;
                text-decoration: none;
                display: block;
                background-color: #F3F2EC;
            }

                .dropdown-content a:hover {
                    background-color: #E3AB9A;
                    border-radius: 10px;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

      
    </style>


    <!-- script
    ================================================== -->
    <script src="../Library/js/modernizr.js"></script>

    <script>
        window.onload = function () {
            var toggleButton = document.querySelector('.hero__categories__all');
            var productList = document.querySelector('.hero__categories ul');
            toggleButton.addEventListener('click', function () {
                if (productList.style.display === 'none') {
                    productList.style.display = 'block';
                } else {
                    productList.style.display = 'none';
                }
            });
        }
    </script>

    




</head>

<body>

    <header id="header-wrap">
        <div class="top-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-sm-6 logo">
                        <!-- Sử dụng lớp col-md-6 cho màn hình window và col-12 cho các màn hình khác -->
                        <a href="#"><img src="../Library/images/logo.png"></a>
                    </div>
                    <div class="col-md-6 col-sm- menu2">
                        <!-- Sử dụng lớp col-md-6 cho màn hình window và col-12 cho các màn hình khác -->
                        <div class="action-menu">
                            <div class="search-bar">
                                <a href="#" class="search-button search-toggle" data-selector="#header-wrap">
                                    <i class="icon icon-search"></i>
                                </a>
                                <form role="search" method="get" class="search-box">
                                    <input class="search-field text search-input" placeholder="Search" type="search">
                                </form>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(username))
                        {
                            <div class="dropdown">
                                <a href="#" class="dropbtn user-account for-buy">
                                    <i class="bi bi-person-circle"></i>
                                    <span>@username</span>
                                </a>
                                <div class="dropdown-content" hidden>
                                    <a href="#"><i class="bi bi-file-person"></i> Tài khoản</a>
                                    <a href="#"><i class="bi bi-box-arrow-left"></i> Log out</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <!-- Nếu chưa đăng nhập, hiển thị nút đăng nhập -->
                            <a asp-controller="Access" asp-action="Login" class="user-account for-buy">
                                <i class="bi bi-person-circle"></i>
                                <span>Tài khoản</span>
                            </a>
                        }
                        <a href="shoping-cart.html" class="cart for-buy"><i class="icon icon-clipboard"></i></a>
                    </div>
                </div>
            </div>
        </div><!--top-content-->
        <div class="hamburger"></div>
    </header>
