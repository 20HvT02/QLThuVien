    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <button class="prev slick-arrow">
                    <i class="icon icon-arrow-left"></i>
                </button>

                <div class="main-slider pattern-overlay">
                    <div class="slider-item">
                        <div class="banner-content">
                            <h2 class="banner-title">Life of the Wild</h2>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed eu feugiat amet, libero ipsum enim pharetra hac. Urna commodo, lacus ut magna velit eleifend. Amet, quis urna, a eu.</p>
                            <div class="btn-wrap">
                                <a href="#" class="btn btn-outline-accent btn-accent-arrow">Read More<i class="icon icon-ns-arrow-right"></i></a>
                            </div>
                        </div><!--banner-content-->
                        <img src="../Library/images/main-banner1.jpg" alt="banner" class="banner-image">
                    </div><!--slider-item-->

                    <div class="slider-item">
                        <div class="banner-content">
                            <h2 class="banner-title">Birds gonna be Happy</h2>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed eu feugiat amet, libero ipsum enim pharetra hac. Urna commodo, lacus ut magna velit eleifend. Amet, quis urna, a eu.</p>
                            <div class="btn-wrap">
                                <a href="#" class="btn btn-outline-accent btn-accent-arrow">Read More<i class="icon icon-ns-arrow-right"></i></a>
                            </div>
                        </div><!--banner-content-->
                        <img src="../Library/images/main-banner2.jpg" alt="banner" class="banner-image">
                    </div><!--slider-item-->

                </div><!--slider-->

                <button class="next slick-arrow">
                    <i class="icon icon-arrow-right"></i>
                </button>

            </div>
        </div>
    </div>
</section>
<section id="special-offer" class="bookshelf">

    <div class="section-header align-center">
        <h2 class="section-title">Trending</h2>
    </div>

    <div class="container">
        <div class="row">
            <div class="inner-content">
                <div class="product-list" data-aos="fade-up">
                    <div class="grid product-grid">

                        @foreach (var T in ViewBag.Trending)
                        {
                            <figure class="product-style">
                                <img src="../ImagesBook/@T.TenFileAnhDd" alt="Books" class="product-item" style="height:400px">

                                <button type="button" class="add-to-cart" data-product-tile="add-to-cart">Add to Cart</button>
                                <figcaption>
                                    <h3>@T.TenSach</h3>
                                    <p>@T.TacGia</p>
                                    <div class="item-price">@T.TinhTrangSach</div>
                                </figcaption>
                            </figure>
                        }



                    </div><!--grid-->
                </div>
            </div><!--inner-content-->
        </div>
    </div>
</section>

<section id="featured-books">

    <div class="container">
        <div class="row">
            <div class="inner-content">

                <div class="section-header align-center">
                    <h2 class="section-title">Newest</h2>
                </div>
                <div class="product-list" data-aos="fade-up">
                    <div class="grid product-grid">

                        @foreach (var T in ViewBag.Trending)
                        {
                            <figure class="product-style">
                                <img src="../ImagesBook/@T.TenFileAnhDd" alt="Books" class="product-item" style="height:400px">

                                <button type="button" class="add-to-cart" data-product-tile="add-to-cart">Add to Cart</button>
                                <figcaption>
                                    <h3>@T.TenSach</h3>
                                    <p>@T.TacGia</p>
                                    <div class="item-price">@T.TinhTrangSach</div>
                                </figcaption>
                            </figure>
                        }



                    </div><!--grid-->
                </div>
            </div><!--inner-content-->
        </div>
    </div>




</section>


<section id="popular-books" class="bookshelf">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-header align-center">
                    <h2 class="section-title">Popular Books</h2>
                </div>
                <ul class="tabs">
                    @foreach (var Loai in ViewBag.Loais)
                    {
                        <li data-tab-target="#all-genre" class="active tab">@Loai.TenTheLoai</li>
                    }

                    <a href="@Url.Action("Index", new { showAll = true })">Show All</a>
                </ul>




                @foreach (var item in Model)
                {
                    <div class="tab-content">
                        <div class="col-md-3 ">
                            <figure class="product-style">
                                @*<img src="../ImagesBook/@item.TenFileAnhDd" alt="Books" class="product-item">*@
                                <img src=@Url.Content("../ImagesBook/" +@item.TenFileAnhDd ) alt="Books" class="product-item" style="height:350px">

                                <button type="button" class="add-to-cart" data-product-tile="add-to-cart">Add to Cart</button>
                                <figcaption>
                                    <div class="marquee" ><h3>@item.TenSach</h3></div>
                                    <p>@item.TacGia</p>
                                    <div class="item-price">@item.TinhTrangSach</div>

                                </figcaption>
                            </figure>
                        </div>
                    </div>
                }



            </div><!--inner-tabs-->

        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="btn-wrap align-right">
                    @Html.ActionLink("View all products", "HienSanPham", null, new { @class = "btn-accent-arrow" })
                    <i class="icon icon-ns-arrow-right"></i>
                </div>



            </div>
        </div>
    </div>
</section>
